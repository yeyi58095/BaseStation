//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "MMEngine.h"
#include "Unit5.h"
#include "Person.h"
#include "RandomVar.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm5 *Form5;
int sensorAmount;
//---------------------------------------------------------------------------
__fastcall TForm5::TForm5(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm5::Button1Click(TObject *Sender)
{
	Person* p = new Person(L"Ji", 12);

	double sum = 0;
	int n = 100000;

	for(int i = 0; i < n; i++){
		sum += rv::exponential(1);
	}
	double result = (double) sum / (double) n;

	ShowMessage(result);


	delete p;
}
//---------------------------------------------------------------------------

void __fastcall TForm5::sensorAmountEditChange(TObject *Sender)
{
	if(Form5->sensorAmountEdit->Text != ""){
		sensorAmount = StrToInt(Form5->sensorAmountEdit->Text);
	}
}
//---------------------------------------------------------------------------

void __fastcall TForm5::generatorButtonClick(TObject *Sender)
{
	//reset();
	Form5->selectSensorComboBox->Clear();

	for(int i = 1; i <= sensorAmount; i++){
		Form5->selectSensorComboBox->Add(i);
	}

	Form5->selectSensorComboBox->ItemIndex = 0;

}
//---------------------------------------------------------------------------

